/* 标题部分的样式 */

.header {
  height: 50rpx;
  margin: 30rpx 0;
}

#headerTitle {
  font-size: 20px;
  font-weight: bold;
  width: 100%;
  text-align: center;
}

/* 分割线 */
.divLine {
  background: #e0e3da;
  width: 100%;
  height: 3rpx;
  margin: 10rpx;
}

/* 增减部门按钮的样式 */
button[plain] {
  display: inline-block;
  border: 0;
  width: 100rpx;
  margin: 10rpx 0;
}

.addBtn, .depBtn {
  display: flex;
  margin: 0;
  width: 50rpx;
  height: 50rpx;
  border: none;
}
/* 图片相关 */
.imageRows{
  margin: 10rpx 0;
}
.imageText {
  margin: 0 20rpx;
}
.imageDetail{
  height: 300rpx;
  width: 200rpx;
  margin: 20rpx;
}

/* 上传图片按钮样式 */
.imageBtn{
  border-radius: 8px;
  border: 3px solid  #00A383;
  padding: 5px 10px;
  margin: 10px 25px 5px 25px;
  display: inline-block;
}
.imageBtn image{
  width: 50rpx;
  height: 50rpx;
}

