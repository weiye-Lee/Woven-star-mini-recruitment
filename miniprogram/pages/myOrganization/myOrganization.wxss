/* pages/myOrganization/myOrganization.wxss */
/* 上部的样式 */
.header {
  background-color: #00A383;
  height: 130rpx;
  padding: 60rpx 0 100rpx 0;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  display: flex;
}

.header .userImg {
  border-radius: 50%;
  overflow: hidden;
  height: 150rpx;
  width: 150rpx;
  margin: 0 50rpx;
}

.header .userName {
  text-align: center;
  line-height: 150rpx;
  font-size: 42rpx;
  font-family: Microsoft Yahei;
  font-weight: bolder;
}

.header .userTap p {
  display: inline-block;
  background-color: white;
  color: #00A383;
  font-size: 22rpx;
  border-radius: 25%;
  padding: 0 5rpx;
  margin: 50rpx 0 0 10rpx;
}

/* 组织名称部分 */
#title {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  white-space: nowrap;
  margin-top: 230rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}

#title p {
  font-size: 45rpx;
  border-radius: 12rpx;
  border: 1px solid white;
  background-color: #00A383;
  color: white;
  padding: 10rpx 30rpx;
}

/* 下部样式 */

/* 简历部分容器样式 */
.body {
  min-height: 900rpx;
  margin: 0 50rpx;
  padding: 15rpx 0;
  background-color: rgb(0, 163, 131, 0.6);
  border-radius: 25rpx;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}

/* 每条简历样式 */
.resume {
  box-shadow: 0px 2px 2px 0px #D3D3D3;
  /* box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04); */
  border-radius: 15rpx;
  background-color: white;
  padding: 20rpx 0;
  margin: 20rpx 40rpx;
}

.resume:hover,
button:hover {
  background: #00A383;
}

/* 组织信息样式 */
.detail {
  position: relative;
  background-color: rgb(0, 163, 131, 0.6);
  border-radius: 25rpx;
  margin: 30rpx 50rpx;
  padding: 15rpx 0;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}

.detailTitle {
  margin: 10rpx 40rpx;
  color: aliceblue;
}

.detailRow {
  margin: 15rpx 50rpx;
  color: aliceblue;
}

#update {
  position: absolute;
  background-color: white;
  color: #00A383;
  font-size: 28rpx;
  border: 1px solid white;
  border-radius: 12rpx;
  padding: 3rpx 8rpx;
  top: 25rpx;
  right: 30rpx;
}
/* 红字提示 */
.tip {
  color: red;
  font-size: small;
  text-align: center;
  margin-top: 20rpx;
}